                        <label for="exampleInputEmail1">Problem </label>
                        <input v-model="editSuggestion.Problem" type="text" class="form-control"
                               id="exampleInputEmail1"
                               aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Solution</label>
                        <input v-model="editSuggestion.Solution" type="text" class="form-control"
                               id="exampleInputEmail1"
                               aria-describedby="emailHelp">
                        <div class="form-group"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button @click="editSuggestion" type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
