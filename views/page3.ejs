<script>
    var app = new Vue({
        el: "#root",
        data: {
            Womens:[],
            newWomen:{
                Name: "",
                Problem: "",
                Solution: ""
            },
            editSuggestion:{
                Name: "",
                Problem: "",
                Solution: ""
            }
        },
        methods: {
            // openInputModal: function () {
            //     $('#inputModal').modal('show')
            //
            // },
            openEditModal: function (cartoon) {
                this.editSuggestion = cartoon
                $('#editModal').modal('show')

            },
            // addWomen: function () {
            //     axios.post('/api/cartoons', {women: this.newWomen}).then(function (response) {
            //
            //         if (response.data.isSuccess) {
            //             getWomens()
            //             $('#inputModal').modal('hide')
            //         }
            //
            //     }).catch(function (error) {
            //         console.log("Error")
            //
            //     })
            // },
            editSuggestion: function () {
                axios.put('/api/women', {women: this.editSuggestion}).then(function (response) {
                    if (response.data.isSuccess) {
                        $('#editModal').modal('hide');
                        getWomens();
                    }
                })
                window.location.reload()
            },

            removeWomen: function (id) {
                console.log(id)
                axios.delete('api/women',
                    {
                        params: {id: id}

                    })
                window.location.reload()
            }

        },

        mounted: function () {
            // alert("enjoy :)")
            axios.get("/api/women").then(function (response) {
                console.log(response.data)
                app.Womens = response.data;

            })
            getWomens()
        }
    })
</script>